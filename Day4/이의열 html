  <div class="section">
    <h2 class="clickable" onclick="openProfileTab()">프로필</h2>
  </div>

  <script>
    function openPostsTab() {
      const htmlContent = `
        <html>
        <head>
          <meta charset="UTF-8">
          <title>최근 게시물</title>
          <style>
            body { font-family: 'Merriweather', serif; padding: 40px; background: #f9f9f9; }
            h2 { text-align: center; }
            ul { font-size: 18px; }
          </style>
        </head>
        <body>
          <h2>최근 게시물</h2>
          <ul>
            <li>나의 꿈</li>
            <li>나의 목표</li>
            <li>나의 취미</li>
          </ul>
        </body>
        </html>
      `;
      const blob = new Blob([htmlContent], { type: 'text/html' });
      const url = URL.createObjectURL(blob);
      window.open(url, '_blank');
    }

    function openProfileTab() {
      const htmlContent = `
        <html>
        <head>
          <meta charset="UTF-8">
          <title>프로필</title>
          <style>
            body { font-family: 'Merriweather', serif; padding: 40px; background: #f4f4f4; }
            .container { display: flex; align-items: center; }
            .photo { width: 150px; height: 150px; background: #ccc; border-radius: 10px; margin-right: 30px; }
            .info { line-height: 1.8; }
          </style>
        </head>
        <body>
          <h2>프로필</h2>
          <div class="container">
            <div class="photo">사진</div>
            <div class="info">
              <p><strong>이름:</strong> 이의열</p>
              <p><strong>아이디:</strong> your_id_here</p>
              <p><strong>생년월일:</strong> YYYY-MM-DD</p>
              <p><strong>자기소개:</strong> AI와 수학에 관심이 많고 새로운 기술을 탐구하는 것을 좋아합니다.</p>
            </div>
          </div>
        </body>
        </html>
      `;
      const blob = new Blob([htmlContent], { type: 'text/html' });
      const url = URL.createObjectURL(blob);
      window.open(url, '_blank');
    }
  </script>

